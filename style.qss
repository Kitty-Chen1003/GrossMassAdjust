QLineEdit {
    font-family: "Microsoft YaHei";
    padding: 5px;
    border: 1px solid #bdc3c7;
    border-radius: 3px;
    selection-background-color: #3498db;
}
QLineEdit:focus {
    border: 1px solid #3498db;
    background: #ecf0f1;
}

QLabel#normal{
    font-size: 12pt;
    font-family: "Microsoft YaHei";
    background: transparent;
}

QLabel#title{
    font-size: 14pt;
    font-family: "Microsoft YaHei";
    padding: 5px;
    background: transparent;
    font-weight: bold;

}
